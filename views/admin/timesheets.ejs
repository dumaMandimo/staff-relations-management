        <table class="table table-striped table-light mt-4">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Task</th>
              <th>Date</th>
              <th>Task Duration</th>
              <th>Task Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="task-list">
            <!-- Timesheet data will be displayed here -->
          </tbody>
        </table>
      </div>

      <!-- Buttons for downloading timesheet -->
      <div class="d-flex justify-content-between mt-3">
        <button id="downloadCSV" class="btn btn-primary">Download CSV</button>
      </div>
    </section>
    <script src="timesheet.js" type="module"></script>
  </body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="Admin.css">
    <script src="https://kit.fontawesome.com/4f347c46d9.js" crossorigin="anonymous"></script>
    <title>Admin Dashboard</title>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="sidebar-header">
              <button class="toggle-btn"><i class="fas fa-bars"></i></button>
            </div>
            <nav>
              <ul>
                <li><a href="#" class="homepage"><i class="fas fa-home"></i> <span>Homepage</span></a></li>
                <li><a href="#" class="Employees"><i class="fa-solid fa-user"></i> <span>Employees</span></a></li>
                <li><a href="#" class="Bookings"><i class="fas fa-book"></i> <span>Bookings</span></a></li>
                <li><a href="#" class="timesheets"><i class="fas fa-clipboard"></i> <span>Timesheets</span></a></li>
                <li><a href="#" class="meals"><i class="fas fa-utensils"></i> <span>Meals</span></a></li>
                <a href="/logout" class="logout"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
              </ul>
            </nav>
          </div>

        <div class="content">
            <div id="contentContainer"></div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            loadHomepage();
        });

        function loadHomepage() {
            fetch('homepage.ejs')
                .then(response => response.text())
                .then(data => {
                    document.getElementById('contentContainer').innerHTML = data;
                    console.log(document.getElementById('contentContainer').main)
                })
                .catch(error => console.error('Error loading homepage:', error));
        }
    </script>
    <script src="sidebar.js"></script>
</body>
</html>
